{
    "name": "daikon/read-model",
    "type": "library",
    "description": "Read-model components for Daikon projects.",
    "keywords": [ "read-model", "projection", "repository", "immutable" ],
    "homepage": "https://github.com/daikon-cqrs/read-model",
    "license": "MPL-2.0",
    "prefer-stable": true,
    "minimum-stability": "dev",
    "require": {
        "php": ">=7.1",
        "beberlei/assert": "^2.7",
        "daikon/event-sourcing": "0.1",
        "daikon/data-structure": "0.1",
        "daikon/message-bus": "0.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.2",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "autoload": {
        "psr-4": { "Daikon\\ReadModel\\" : "src" }
    },
    "autoload-dev": {
        "psr-4": { "Daikon\\Tests\\ReadModel\\": "tests" }
    },
    "scripts": {
        "build": [
            "@test",
            "@code-sniffer",
            "@validate-json"
        ],
        "test": "phpunit",
        "code-sniffer": "phpcs --extensions=php --standard=psr2 src tests",
        "code-sniffer-autofix": "phpcbf --standard=psr2 -d tabWidth=4 src",
        "validate-json": "composer validate --no-check-all --no-check-lock",
        "validate-deps": "composer validate --with-dependencies --strict"
    }
}
